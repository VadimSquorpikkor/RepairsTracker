<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Leonardo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="smallTextColor">@color/black</item>
        <item name="backgroundColor">@color/colorLightGray</item>
        <item name="coloredText">@color/purple_700</item>
        <item name="dialogBackground">@color/colorLightGray</item>
        <item name="lightButton">@color/purple_700</item>
        <item name="lightButtonPressed">@color/colorPrimary</item>
        <item name="darkButton">@color/colorLightGray</item>
        <item name="editBackground">@color/white</item>
        <item name="logoImage">@mipmap/logo_big</item>
        <item name="themeSelector">@drawable/ic_baseline_nights_stay_24</item>

    </style>


    <style name="Theme.Leonardo.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="smallTextColor">@color/white</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="coloredText">@color/main_orange</item>
        <item name="dialogBackground">@color/colorPrimaryDark</item>
        <item name="lightButton">@color/colorPrimary</item>
        <item name="lightButtonPressed">@color/main_orange</item>
        <item name="darkButton">@color/colorPrimaryDark</item>
        <item name="editBackground">@color/colorPrimary</item>
        <item name="logoImage">@mipmap/logo_big_grayscale</item>
        <item name="themeSelector">@drawable/ic_baseline_wb_sunny_24</item>

    </style>
</resources>