<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nice_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="colorControlHighlight">#424242</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_shape_selector</item>
    </style>

    <style name="dialogEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialogSpinner">
        <item name="android:textAlignment">center</item>
        <item name="android:scrollbarSize">22dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialogTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_orange</item>
    </style>

    <!-- ******************************************************************************************* -->

    <style name="dialogLinearText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/main_orange</item>
    </style>

    <style name="dialogLinearEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:gravity">center</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="dialogLinearSpinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:scrollbarSize">22dp</item>
    </style>

    <style name="dialogLinearHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

</resources>